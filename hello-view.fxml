<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<AnchorPane prefHeight="200.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.HelloController">
    <children>
        <ChoiceBox fx:id="yearChoiceBox" layoutX="40.0" layoutY="40.0">
            <items>
                <FXCollections fx:factory="observableArrayList">
                </FXCollections>
            </items>
        </ChoiceBox>

        <ChoiceBox fx:id="classChoiceBox" layoutX="40.0" layoutY="80.0">
            <items>
                <FXCollections fx:factory="observableArrayList">
                </FXCollections>
            </items>
        </ChoiceBox>

        <ChoiceBox fx:id="studentChoiceBox" layoutX="40.0" layoutY="120.0">
            <items>
                <FXCollections fx:factory="observableArrayList">
                </FXCollections>
            </items>
        </ChoiceBox>

        <!-- TextFields -->
        <TextField fx:id="nameField" layoutX="300.0" layoutY="40.0" promptText="Name" />
        <TextField fx:id="surnameField" layoutX="300.0" layoutY="80.0" promptText="Surname" />

        <!-- Buttons -->
        <Button fx:id="processButton" layoutX="40.0" layoutY="160.0" mnemonicParsing="false" onAction="#processDetails" text="Process" />
        <Button fx:id="createButton" layoutX="300.0" layoutY="160.0" mnemonicParsing="false" onAction="#createDetails" text="Create" />
    </children>
</AnchorPane>
